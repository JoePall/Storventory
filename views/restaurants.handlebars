<!-- HTML for the Restaurants -->

<body>
<div class="container-lg">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2><b>My Restaurants</b></h2></div>
                    <div class="col-sm-4">
                    </div>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each restaurants}}
                    <tr>
                        <tr data-id="((this.id}}"></tr>
                        <td>{{this.name}}</td>
                        <td>{{this.location}}</td>
                        <td>
                            <a class="add-new" title="Add" data-toggle="tooltip"><i class="material-icons">&#xE03B;</i></a>
                            <a class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                            <a class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                        </td>
                    </tr>  
                    {{/each}}  
                    <tr>

                        <td><input type="text" class="form-control" name="name" id="name"></td>
                        <td><input type="text" class="form-control" name="location" id="location"></td>

                        <td>
                            <a class="submit" title="Submit" data-toggle="tooltip"><i class="material-icons">&#xe5ca;</i></a>

                        </td>
                    </tr>  
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript" src="/js/restaurants.js"></script>

</body>

</html>